generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id
  username      String @unique
  email         String @unique
  password_hash String
  points        Int

  sessions Session[]
  Ride     Ride[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Bike {
  id        String @id
  longitude Float
  latitude  Float
  status    Status
  Ride      Ride[]
}

enum Status {
  AVAILABLE
  UNAVAILABLE
}

model Ride {
  id        String   @id
  userId    String
  bikeId    String
  startedAt DateTime
  endedAt   DateTime
  distance  Float
  totalCost Float

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
  bike Bike @relation(references: [id], fields: [bikeId], onDelete: Cascade)
}

model Setting {
  id              String @id
  bookingFee      Float
  hourlyRate      Float
  damageReportFee Float
  pointValue      Float
}
